<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/button_nav_up_view_top"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:layout_marginStart="8dp"
        android:paddingHorizontal="8dp"
        android:src="@drawable/ic_back"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_view_top"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button_nav_up_view_top"
        android:layout_toStartOf="@+id/button_setting_view_top"
        />

    <ImageButton
        android:id="@+id/button_setting_view_top"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@color/transparent"
        android:layout_marginEnd="8dp"
        android:paddingHorizontal="8dp"
        />
</RelativeLayout>

